{
  "family": "ctse-microservice-task",
  "executionRoleArn": "arn:aws:iam::351545278583:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "auth-microservice",
      "image": "351545278583.dkr.ecr.us-east-1.amazonaws.com/auth-microservice-repository:latest",
      "portMappings": [
        {
          "containerPort": 5001,
          "hostPort": 5001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "5001"
        },
        {
          "name": "MONGO_URI",
          "value": "${MONGO_URI}"
        },
        {
          "name": "ACCESS_TOKEN_SECRET",
          "value": "${ACCESS_TOKEN_SECRET}"
        },
        {
          "name": "REFRESH_TOKEN_SECRET",
          "value": "${REFRESH_TOKEN_SECRET}"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5001/health || exit 1"
        ],
        "interval": 10,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 20
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ctse-microservice-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "auth"
        }
      }
    },
    {
      "name": "api-gateway",
      "image": "351545278583.dkr.ecr.us-east-1.amazonaws.com/api-gateway-repository:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "5000"
        },
        {
          "name": "AUTH_API",
          "value": "http://localhost:5001"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/auth/health || exit 1"
        ],
        "interval": 10,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 20
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ctse-microservice-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "gateway"
        }
      }
    }
  ]
}
